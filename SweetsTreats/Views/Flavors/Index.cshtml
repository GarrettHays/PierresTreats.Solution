@using SweetsTreats.Models;

<div class="container">

  @if (@Model.Count == 0)
  {
    <h3>No Flavors have been added yet!</h3>
  } 

  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId }, new {@class = "myCssClass"})</li>
    }
  </ul>
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new flavors", "Create")</td>
      <td>@Html.ActionLink("Home", "Index", "Home")</td>
    </tr>
  </table>
</div>