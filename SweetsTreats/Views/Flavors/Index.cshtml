@using SweetsTreats.Models;
@{
  Layout = "_Layout";
}

<h1>FLAVORS:</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Flavors have been added yet!</h3>
  } 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId }) | @flavor.JoinEntities.Count Treat(s)</li>
  }
</ul>
  
<p>@Html.ActionLink("Add new flavors", "Create", null, null, new { @class="htmlButton"})</p>