@using SweetsTreats.Models;
@{
  Layout = "_Layout";
}

<h1>TREATS:</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Treats have been added yet!</h3>
  } 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) | @treat.JoinEntities.Count Flavor(s)</li>
  }
</ul>
  
<p>@Html.ActionLink("Add new treats", "Create", null, null, new { @class="htmlButton"})</p>