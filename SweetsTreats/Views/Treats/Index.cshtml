@using SweetsTreats.Models;

<div class="container">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      }
    </ul>
  } 
  else
  {
    <h3>No Treats have been added yet!</h3>
  }
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new Treat", "Create")</td>
      
      <td>@Html.ActionLink("Home", "Index", "Home")</td>
    </tr>
  </table>
</div>